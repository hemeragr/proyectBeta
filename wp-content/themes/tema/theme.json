{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
		"appearanceTools": true,
        "layout": {
			"contentSize": "1200px"
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": [ "px", "em", "rem", "vh", "vw", "%" ],
            "blockGap": true
        },		
        "border": {
			"width": true,
			"style": true,
			"color": true,
			"radius": true
		},
        "color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"customGradient": false,
			"customDuotone": false,
            "link": true,
			"palette": [
				{
					"name": "Light",
					"slug": "light",
					"color": "rgb(255, 255, 255)"
				},
				{
					"name": "Light-medium",
					"slug": "light-medium",
					"color": "rgb(217, 217, 217)"
				},

				{
					"name": "Dark",
					"slug": "dark",
					"color": "rgb(84, 84, 84)"
				},
				{
					"name": "Primary",
					"slug": "primary",
					"color": "rgb(249, 206, 104)"
				}
            ]
        },
        "typography": {
			"fontWeight": false,
            "lineHeight": true,
			"letterSpacing": true,
			"dropCap": false,
			"fontFamilies": [
                {
					"fontFamily": "'Roboto Mono', sans-serif",
                    "name": "Roboto Mono",
                    "slug": "roboto-mono",
                    "fontFace": [
						{
							"fontFamily": "Roboto Mono",
							"fontWeight": "200",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/RobotoMono-VariableFont_wght.ttf" ]
						}
					]
                }
			],
			"fontSizes": [
				{
                    "name": "Extra Small",
					"slug": "extra-small",
					"size": "1rem"
				},
				{
                    "name": "Small",
					"slug": "small",
					"size": "1.25rem"
				},
				{
                    "name": "Normal",
					"slug": "normal",
					"size": "1.5rem"
				},
				{
                    "name": "Medium",
					"slug": "medium",
					"size": "2rem"
				},
				{
                    "name": "Large",
					"slug": "large",
					"size": "3rem"
				},
				{
                    "name": "Extra Large",
					"slug": "extra-large",
					"size": "6rem"
				}
			]
		}
    },
	"styles": {
		"spacing": {
			"blockGap": "2px"
		},
		"color": {
			"background": "var(--wp--preset--color--light)",
			"text": "var(--wp--preset--color--dark)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--normal)",
			"fontFamily": "var(--wp--preset--font-family--roboto-mono)",
			"fontWeight": "200",
			"lineHeight": "1.6",
			"letterSpacing": "-0.025rem"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontWeight": "300"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-large)",
					"lineHeight": "1.1",
					"letterSpacing": "-0.2rem"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "1.2",
					"letterSpacing": "-0.1rem"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.3",
					"letterSpacing": "-0.05rem"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--light-medium)"
				},
				"typography": {
					"textDecoration": "none"
				},				
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary)"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--primary)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--primary)"
					}
				}
			},
			"button": {
				"spacing": {
					"padding": {
						"top": "1rem",
						"right": "2rem",
						"bottom": "1rem",
						"left": "2rem"
					}
				},
				"border": {
					"width": "2px",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)",
					"radius": "0"
				},
				"color": {
					"background": "none",
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"textTransform": "uppercase",
					"letterSpacing": "0.2rem"
				},				
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--light)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--light)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--light)"
					}
				}
			}
		}
	}
}